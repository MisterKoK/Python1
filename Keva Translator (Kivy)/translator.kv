<ItemLabel@Label>:  # Создаем класс и через собаку говорим кто будет наследовать свойства
    font_size: '25sp'  # Scalable pixels (sp)
    # выравнивание
    halign: 'left'
    valign: 'middle'
    text_size: self.size  # чтобы текст растянуть по лейблу и сработли свойства

<Container>:
    rows: 4
    text_input: text_input
    english_label: english_label
    vietnamese_label: vietnamese_label


    AnchorLayout:
        size_hint: 1, 0.20
        TextInput:
            id: text_input
            font_size: '25sp'
            multiline: True

    GridLayout:
        rows: 2  # два ряда

        BoxLayout:
            orientation: 'vertical'
            padding: [30, 0, 0, 0]  # слева, сверху, справа, снизу
            ItemLabel:
                text: 'English'
            ItemLabel:
                text: 'перевод'
                id: english_label
                valign: 'top'


        BoxLayout:
            orientation: 'vertical'
            padding: [30, 0, 0, 0]  # слева, сверху, справа, снизу
            ItemLabel:
                text: 'Russian'
            ItemLabel:
                text: 'перевод'
                id: vietnamese_label
                valign: 'top'

    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.9, 0.12
        padding: [20, 0, 20, 5]

        Button:
            text: 'Очистить!'
            font_size: 40
            on_release:
                root.clear_text()

    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.9, 0.2
        padding: [20, 0, 20, 20]

        Button:
            text: 'Перевести!'
            font_size: 40
            on_release:
                root.translate_text()

